/* css document for music store project */

/* Color Palette:
Dark Green		#77bb33
Light Green		#aaff22
Light Blue		#bbeeff
Washout Blue	#ddeeee
Blue			#88ccff */


body {

	background-color: #ddeeee;
	
}

#wrapper{
	margin: auto;
	width: 900px;
	height: auto;
	background-color: #77bb33;
	box-shadow: 0px 0px 10px #000;
	border-radius: 5px;
	padding-top: 30px;
}

#data{
	margin:auto;
	width: 900px;
	padding:auto;
	height: auto;
	text-align:center;
	font-family:tahoma, helvetica, arial, trebuchet ms, sans-serif;
	color: black;
	background-color: #88ccff;
	border-radius: 1px;
}

#search{
	margin: auto;
	width: 700px;
	height: 60px;
	color: white;
	font-family: trebuchet ms, Cursive, Arial, Helvetica, sans-serif;
	background-color: #517a39;
	border-radius: 15px 15px 15px 15px;
	margin-bottom: 75px;

}
#footer {
	font-size:16px;
	font-family:Arial;
	padding-bottom:10px;
}
center a {
	text-decoration:none;
	color:black;
}
center a:hover {
	text-decoration:underline;
	color:blue;
}
#footing{
	color: lightgray;
}
/*Classes*/
.inputSearches
{
	text-align: right;
	margin:18px 0px 0px 0px;
}

.grayText {
	color: gray;
}
